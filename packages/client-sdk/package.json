{
  "name": "@zkp2p/client-sdk",
  "version": "4.1.2",
  "description": "Browser-first TypeScript SDK for ZKP2P with React hooks, unified authentication, and peerauth extension integration",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./extension": {
      "types": "./dist/extension.d.ts",
      "import": "./dist/extension.mjs",
      "require": "./dist/extension.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "release": "release-it",
    "docs": "typedoc"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "zkp2p",
    "sdk",
    "browser",
    "extension",
    "peerauth",
    "viem",
    "react",
    "react-hooks",
    "crypto",
    "web3",
    "ethereum",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zkp2p/zkp2p-client-sdk.git",
    "directory": "packages/client-sdk"
  },
  "bugs": {
    "url": "https://github.com/zkp2p/zkp2p-client-sdk/issues"
  },
  "homepage": "https://github.com/zkp2p/zkp2p-client-sdk#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.4",
    "@types/node": "^20.10.0",
    "@types/react": "^19.1.11",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^5.7.2",
    "prettier": "^3.3.3",
    "react": "^19.1.1",
    "release-it": "^17.11.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@zkp2p/contracts-v2": "^0.0.6",
    "canonicalize": "^1.0.8"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "viem": "^2.37.3"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
